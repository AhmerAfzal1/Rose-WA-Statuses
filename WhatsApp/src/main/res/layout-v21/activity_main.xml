<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/primaryColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/toolbar_image_view"
                android:layout_height="@dimen/toolbar_image_view"
                android:layout_centerVertical="true"
                android:contentDescription="@string/empty_description"
                android:padding="@dimen/toolbar_image_view_padding"
                app:srcCompat="@drawable/ic_toolbar_arrow_back" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/toolbar_title_margin"
                android:layout_marginRight="@dimen/toolbar_title_margin"
                android:layout_toStartOf="@+id/layoutIcons"
                android:layout_toEndOf="@id/ivBack"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layoutIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/margin_or_padding_05dp">

                <ImageView
                    android:id="@+id/ivSettings"
                    android:layout_width="@dimen/toolbar_image_view"
                    android:layout_height="@dimen/toolbar_image_view"
                    android:contentDescription="@string/empty_description"
                    android:padding="@dimen/toolbar_image_view_padding"
                    app:srcCompat="@drawable/ic_activity_settings" />

                <ImageView
                    android:id="@+id/ivInfo"
                    android:layout_width="@dimen/toolbar_image_view"
                    android:layout_height="@dimen/toolbar_image_view"
                    android:contentDescription="@string/empty_description"
                    android:padding="@dimen/toolbar_image_view_padding"
                    app:srcCompat="@drawable/ic_activity_info" />
            </LinearLayout>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/layoutNoStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvNoStatus"
            style="@style/myTextAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="top|center"
            android:padding="@dimen/margin_or_padding_10dp"
            android:text="@string/no_having_status"
            android:textColor="@color/secondaryTextColor" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvStatusList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/adViewLayout"
        android:layout_below="@id/layoutNoStatus"
        android:layout_marginStart="@dimen/margin_or_padding_10dp"
        android:layout_marginLeft="@dimen/margin_or_padding_10dp"
        android:layout_marginTop="@dimen/margin_or_padding_05dp"
        android:layout_marginEnd="@dimen/margin_or_padding_10dp"
        android:layout_marginRight="@dimen/margin_or_padding_10dp"
        android:layout_marginBottom="@dimen/margin_or_padding_05dp"
        android:gravity="top"
        android:scrollbars="vertical" />

    <LinearLayout
        android:id="@+id/adViewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_or_padding_05dp"
        android:layout_marginBottom="@dimen/margin_or_padding_05dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="LARGE_BANNER"
            ads:adUnitId="@string/banner_ad_unit_id" />
    </LinearLayout>
</RelativeLayout>