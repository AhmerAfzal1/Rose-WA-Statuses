<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    tools:background="?android:attr/selectableItemBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@android:id/icon"
        android:layout_width="@dimen/pref_image_view"
        android:layout_height="@dimen/pref_image_view"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/pref_margin"
        android:layout_marginLeft="@dimen/pref_margin"
        android:layout_marginTop="@dimen/pref_margin"
        android:layout_marginEnd="@dimen/pref_margin"
        android:layout_marginRight="@dimen/pref_margin"
        android:layout_marginBottom="@dimen/pref_margin" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/pref_margin"
        android:paddingLeft="@dimen/pref_margin"
        android:paddingEnd="@dimen/pref_margin"
        android:paddingRight="@dimen/pref_margin">

        <TextView
            android:id="@android:id/title"
            style="@style/myTextAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/colorPrefTitle" />

        <TextView
            android:id="@android:id/summary"
            style="@style/myTextAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pref_summary_top_margin"
            android:maxLines="4"
            android:text="@string/app_name"
            android:textColor="@color/colorPrefSummary" />

    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchWidget"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@null"
        android:clickable="false"
        android:focusable="false"
        android:paddingStart="@dimen/pref_margin"
        android:paddingLeft="@dimen/pref_margin"
        android:paddingEnd="@dimen/pref_margin"
        android:paddingRight="@dimen/pref_margin" />

</LinearLayout>