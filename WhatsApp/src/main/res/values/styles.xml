<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="myTextAppearanceTabWidget" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/tabbed_text_view_size</item>
    </style>

    <style name="Rose.Toolbar.Style" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">?attr/colorOnSurface</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Rose.MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background Color-->
        <item name="android:background">@android:color/white</item>
        <!-- Text Color for title and message -->
        <item name="colorOnSurface">@android:color/black</item>
        <!-- Style for positive button -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <!-- Style for negative button -->
        <!--<item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>-->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <!-- text color for the button -->
        <item name="android:textColor">@android:color/white</item>
        <!-- Background tint for the button -->
        <item name="backgroundTint">@color/primaryDarkColor</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="Rose.Toolbar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Rose.TextAppearance.Heading" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_appearance_large</item>
    </style>

    <style name="Rose.TextAppearance.Toolbar" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Rose.TextAppearance.Heading.Small" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_appearance_medium</item>
    </style>

    <style name="Rose.TextAppearance.Normal" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/text_appearance_small</item>
    </style>

    <style name="Rose.TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Rose.TextAppearance.Tiny" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
